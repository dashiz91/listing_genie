# ======================
# Application Settings
# ======================
APP_NAME=listing-genie
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# ======================
# AI API Keys
# ======================
# Gemini (Required - for image generation and vision)
GEMINI_API_KEY=your-gemini-api-key

# OpenAI (Optional - backup for vision analysis)
OPENAI_API_KEY=your-openai-api-key
VISION_PROVIDER=gemini  # or "openai"

# ======================
# Supabase (Required)
# ======================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret  # Optional, for token verification

# ======================
# Database
# ======================
# Local: sqlite:///./listing_genie.db
# Production: postgresql://postgres.PROJECT_ID:PASSWORD@aws-1-us-east-1.pooler.supabase.com:5432/postgres
DATABASE_URL=sqlite:///./listing_genie.db

# ======================
# Access Control
# ======================
# Comma-separated list of allowed emails (empty = allow all)
ALLOWED_EMAILS=

# ======================
# Logging
# ======================
LOG_LEVEL=INFO
